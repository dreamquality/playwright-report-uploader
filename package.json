{
  "name": "playwright-report-uploader",
  "version": "0.1.2",
  "description": "Playwright plugin for automatic HTML report upload to cloud providers",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "build": "tsc",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf lib",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "tsc --watch",
    "docs": "node scripts/generate-docs.js",
    "health-check": "node scripts/check-readiness.js",
    "format": "npx prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "npx prettier --check src/**/*.ts tests/**/*.ts",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run lint && npm run format:check && npm run build && npm test",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "playwright",
    "report",
    "upload",
    "aws",
    "azure",
    "gcp",
    "cloud"
  ],
  "author": "Alex",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamquality/playwright-report-uploader"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.20.0"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.28.0",
    "@google-cloud/storage": "^6.12.0",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^16.6.1",
    "fs-extra": "^11.3.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^18.19.123",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "mock-aws-s3": "^4.0.2",
    "nock": "^13.5.6",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "types": "lib/index.d.ts",
  "files": "[\"lib/**/*\", \"README.md\", \"LICENSE\", \"CHANGELOG.md\"]",
  "bin": {
    "playwright-report-uploader": "lib/index.js"
  }
}
