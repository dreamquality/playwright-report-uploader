{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "testTimeout": 10000,
  "maxWorkers": 2,
  "workerIdleMemoryLimit": "512MB"
}
